<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            >

            <!--android:background="@drawable/list_item_bg"-->

            <LinearLayout
                android:id="@+id/item_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textSize="14sp"
                    android:id="@+id/tv_id"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:text="小圆圈原定男装专卖店"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="@color/material_red_300"
                    android:textSize="14sp"
                    android:layout_gravity="end"
                    android:gravity="right"
                    android:id="@+id/tv_state"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:text="交易成功"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:id="@+id/item_divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/item_top"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#ffd7d7d7" />

            <RelativeLayout
                android:id="@+id/rl_content"
                android:layout_below="@+id/item_divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_margin="8dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="center"
                    android:src="@drawable/cheese_1"
                    android:id="@+id/iv_command"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <TextView

                    android:layout_toRightOf="@+id/iv_command"
                    android:textSize="14sp"
                    android:id="@+id/tv_name"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:text="时尚炫酷的小衬衣"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_below="@+id/tv_name"
                    android:layout_toRightOf="@+id/iv_command"

                    android:textSize="14sp"
                    android:id="@+id/tv_princes"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:text="实际支付200元"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_toRightOf="@+id/iv_command"
                    android:singleLine="true"
                    android:layout_below="@+id/tv_princes"
                    android:id="@+id/tv_time"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:text="共1件商品 合计：￥10.88（含运费）"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:id="@+id/item_divider2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/rl_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#ffd7d7d7" />
            <RelativeLayout
                android:layout_below="@id/item_divider2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button

                    android:layout_margin="4dp"
                    android:background="?attr/colorPrimary"
                    android:layout_alignParentRight="true"
                    android:id="@+id/btn_comment"
                    android:layout_width="wrap_content"
                    android:text="评价"
                    android:textColor="#fff"
                    android:layout_height="35dp" />
                <Button
                    android:text="查看物流"
                    android:textColor="#000"
                    android:background="@drawable/ordershape"
                    android:layout_margin="4dp"
                    android:id="@+id/btn_look"
                    android:layout_width="wrap_content"
                    android:layout_toLeftOf="@+id/btn_comment"
                    android:layout_height="35dp" />
                <Button
                    android:text="删除订单"
                    android:textColor="#000"
                    android:background="@drawable/ordershape"
                    android:layout_margin="4dp"
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_toLeftOf="@+id/btn_look"
                    android:layout_height="35dp" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>