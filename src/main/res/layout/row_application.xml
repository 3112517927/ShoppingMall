<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView

        android:stateListAnimator="@anim/touch_raise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--在这里可以修改为cardview-->
            <ImageView
                android:src="@drawable/cheese_3"
                android:transitionName="appIcon"
                android:id="@+id/countryImage"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:clickable="false" />

          <LinearLayout
              android:layout_marginLeft="10dp"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
              <TextView
                  android:layout_weight="1"
                  android:text="测试的文字"
                  android:id="@+id/countryName"
                  android:gravity="center_vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="16sp"
                  android:textColor="@color/ms_black"
                  android:clickable="false"
                  />
              <TextView
                  android:layout_weight="1"
                  android:text="测试的文字"
                  android:id="@+id/countryCount"
                  android:gravity="center_vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="16sp"
                  android:textColor="@color/ms_black"
                  android:clickable="false"
                  />
              <TextView
                  android:layout_weight="1"
                  android:text="此商品支持7天无理由退货"
                  android:id="@+id/countryPrice"
                  android:gravity="center_vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="14sp"
                  android:textColor="@color/ms_black"
                  android:clickable="false"
                   />
          </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>